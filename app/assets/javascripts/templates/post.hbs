<div class="post-title">
  {{#if titleEditMode}}
    {{
      edit-title
      class="form-control"
      value=model.title
      focus-out="saveTitle"
      insert-newline="saveTitle"
    }}
  {{else}}
    <h3 {{action "editTitle" on="doubleClick"}}>{{model.title}}</h3>
    <div {{action "editTitle" on="click"}} class="glyphicon glyhicon-btn glyphicon-pencil"></div>
    <div {{action "removePost" on="click"}} class="glyphicon glyhicon-btn glyphicon-remove"></div>
  {{/if}}
</div>

<div class="post-content">
  {{#if contentEditMode}}
    {{
      edit-content
      class="form-control"
      value=model.content
      focus-out="saveContent"
      insert-newline="saveContent"
      rows="10"
    }}
  {{else}}
    <p {{action "editContent" on="doubleClick"}}>{{model.content}}</p>
  {{/if}}
</div>