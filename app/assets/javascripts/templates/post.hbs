<div class="post-title">
  {{#if titleEditMode}}
    {{
      edit-title
      class="form-control"
      value=model.title
      focus-out="saveTitle"
      insert-newline="saveTitle"
    }}
  {{else}}
    <h3 {{action "editTitle" on="doubleClick"}}>{{model.title}}</h3>
  {{/if}}
</div>

<div class="post-content">
  <p>{{model.content}}</p>
</div>